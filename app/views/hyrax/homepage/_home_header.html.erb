<div id="homepage-carousel" class="carousel slide" data-ride="carousel" data-interval="4000">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#homepage-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#homepage-carousel" data-slide-to="1"></li>
    <li data-target="#homepage-carousel" data-slide-to="2"></li>
    <li data-target="#homepage-carousel" data-slide-to="3"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="img-holder" style="background-image: url(<%= asset_path(@images[0]) %>);"></div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-offset-3 col-md-6 carousel-caption-wrapper">
            <div class="carousel-caption home_marketing_text">
              <h3><%= t('carousel.slide_1.header') %></h3>
              <p><%= t('carousel.slide_1.text') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="img-holder" style="background-image: url(<%= asset_path(@images[1]) %>);"></div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-offset-3 col-md-6 carousel-caption-wrapper">
            <div class="carousel-caption home_marketing_text">
              <h3>Featured Item: <%= link_to t('carousel.slide_2.header'), t('carousel.slide_2.header_href'), class: 'carousel-link' %></h3>
              <p><%= t('carousel.slide_2.text') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="img-holder" style="background-image: url(<%= asset_path(@images[2]) %>);"></div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-offset-3 col-md-6 carousel-caption-wrapper">
            <div class="carousel-caption home_marketing_text">
              <h3>Featured Item: <%= link_to t('carousel.slide_3.header'), t('carousel.slide_3.header_href'), class: 'carousel-link' %></h3>
              <p><%= t('carousel.slide_3.text') %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="item">
      <div class="img-holder" style="background-image: url(<%= asset_path(@images[3]) %>);"></div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-offset-3 col-md-6 carousel-caption-wrapper">
            <div class="carousel-caption home_marketing_text">
              <h3>Featured Item: <%= link_to t('carousel.slide_4.header'), t('carousel.slide_4.header_href'), class: 'carousel-link' %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <a class="left carousel-control" href="#homepage-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#homepage-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div><!-- /.carousel -->
